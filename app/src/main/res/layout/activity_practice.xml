<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PracticeActivity">


    <TextView
            android:id="@+id/practiceQuestion"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_marginEnd="3dp"
            android:layout_marginStart="@dimen/four"
            android:layout_marginTop="32dp"
            android:enabled="true"
            android:text=" your question"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center"
            android:textSize="18sp"/>
    <TextView
            android:text="your answer"
            android:layout_width="172dp"
            android:layout_height="123dp"
            android:id="@+id/practiceAnswer"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/practiceQuestion"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/getQuestion"/>
    <Button
            android:text="@string/practice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/getQuestion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.554"
            android:layout_marginTop="39dp"
            app:layout_constraintTop_toBottomOf="@+id/practiceAnswer"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="@string/play_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playAgain"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/getQuestion"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>