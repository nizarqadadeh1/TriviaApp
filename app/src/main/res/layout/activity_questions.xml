<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".QuestionsActivity">


    <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_marginEnd="@dimen/four"
            android:layout_marginStart="@dimen/four"
            android:layout_marginTop="32dp"
            android:enabled="true"
            android:text="choose category"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintTop_toTopOf="parent"
            android:textSize="18sp" android:textColor="@color/colorPrimaryDark"/>

        <Button
        android:id="@+id/choiceA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/four"
        android:layout_marginStart="@dimen/four"
        android:layout_marginTop="32dp"
        android:enabled="true"
        android:text="A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question"/>

    <Button
            android:id="@+id/choiceB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/four"
            android:layout_marginStart="@dimen/four"
            android:layout_marginTop="32dp"
            android:enabled="true"
            android:text="B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/choiceA"/>
    <Button
            android:id="@+id/choiceC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/four"
            android:layout_marginStart="@dimen/four"
            android:layout_marginTop="32dp"
            android:enabled="true"
            android:text="C"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/choiceB"/>
    <Button
            android:id="@+id/choiceD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/four"
            android:layout_marginStart="@dimen/four"
            android:layout_marginTop="32dp"
            android:enabled="true"
            android:text="here"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/choiceC"/>
</android.support.constraint.ConstraintLayout>